<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    android:id="@+id/recyclerView_constraintLayout_lista"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/peladaActivity_imageView_fotoPelada"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher_round"

        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        app:layout_constraintRight_toLeftOf="@+id/peladaActivity_textView_tituloDaPelada"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/peladaActivity_textView_tituloDaPelada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/peladaActivity_imageView_fotoPelada"
        android:layout_toEndOf="@+id/peladaActivity_imageView_fotoPelada"
        android:layout_marginStart="91dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/peladaActivity_textView_vagasDisponiveis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vagas disponivel"
        android:textSize="15dp"
        android:layout_below="@+id/peladaActivity_textView_endereco"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/peladaActivity_imageView_fotoPelada"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toRightOf="@+id/peladaActivity_imageView_fotoPelada" />

    <TextView
        android:id="@+id/peladaActivity_textView_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço"
        android:textSize="15dp"
        android:layout_below="@+id/peladaActivity_textView_tituloDaPelada"
        android:layout_centerHorizontal="true"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/peladaActivity_textView_vagasDisponiveis"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/peladaActivity_textView_vagasDisponiveis" />

    <Button
        android:id="@+id/recyclerView_button_entrarNaPelada"
        app:layout_constraintEnd_toEndOf="@id/recyclerView_constraintLayout_lista"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:text="Entrar"
        android:layout_marginEnd="3dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="6dp" />


</android.support.constraint.ConstraintLayout>