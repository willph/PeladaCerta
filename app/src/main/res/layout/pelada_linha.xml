<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/peladaActivity_imageView_fotoPelada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher_round"

        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="35dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/peladaActivity_textView_tituloDaPelada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/peladaActivity_imageView_fotoPelada"
        android:layout_toEndOf="@+id/peladaActivity_imageView_fotoPelada"
        android:layout_marginStart="13dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/peladaActivity_imageView_fotoPelada"
        app:layout_constraintLeft_toRightOf="@+id/peladaActivity_imageView_fotoPelada" />

    <TextView
        android:id="@+id/peladaActivity_textView_vagasDisponiveis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vagas disponivel"
        android:textSize="30dp"
        android:layout_below="@+id/peladaActivity_textView_endereco"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/peladaActivity_textView_endereco"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/peladaActivity_textView_endereco" />

    <TextView
        android:id="@+id/peladaActivity_textView_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço"
        android:textSize="30dp"
        android:layout_below="@+id/peladaActivity_textView_tituloDaPelada"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/peladaActivity_imageView_fotoPelada"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/peladaActivity_textView_tituloDaPelada" />



</android.support.constraint.ConstraintLayout>